<!-- DÉCLARATION DU CONTRÔLE UTILISATEUR PRINCIPAL -->
<UserControl x:Class="PlanMyNight.PlanMyNightDockables.Views.PlanMyNightDockableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:PlanMyNight.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <!-- DÉFINITION DES RESSOURCES UTILISÉES PAR LE CONTRÔLE -->
    <UserControl.Resources>
        <ResourceDictionary>

            <!-- INCLUSION D'UN DICTIONNAIRE DE RESSOURCES XAML PERSONNALISÉ -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PlanMyNight;component/PlanMyNightDockables/PlanMyNightDockableTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- CONVERTISSEURS PERSONNALISÉS POUR LA LOGIQUE D'AFFICHAGE -->
            <converters:ListCountToVisibilityConverter x:Key="ListCountToVisibilityConverter"/>
            <converters:WarningLevelToBrushConverter x:Key="WarningLevelToBrushConverter"/>
            <converters:StarWidthConverter x:Key="StarWidthConverter"/>
            <converters:ProportionalWidthConverter x:Key="ProportionalWidthConverter"/>
            <converters:FilterActiveToColorConverter x:Key="FilterActiveToColorConverter"/>

            <!-- COULEUR DYNAMIQUE UTILISÉE POUR LES TRACÉS DE LA ROUE DE FILTRES (ADAPTÉE AU THÈME N.I.N.A.) -->
            <SolidColorBrush x:Key="FilterWheelStrokeBrush" Color="{Binding Foreground.Color, ElementName=ReferenceTextBlock}" />
        </ResourceDictionary>
    </UserControl.Resources>


    <!-- GRILLE PRINCIPALE DE LA FENÊTRE -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- EN-TÊTE (NON UTILISÉ ACTUELLEMENT) -->
            <RowDefinition Height="*" />
            <!-- CONTENU PRINCIPAL -->
        </Grid.RowDefinitions>

        <!-- CONTENU PRINCIPAL : ORGANISÉ EN 3 COLONNES -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <!-- PANNEAU DE GAUCHE : PARAMÈTRES FILTRES -->
                <ColumnDefinition Width="8" />
                <!-- SÉPARATEUR VISUEL -->
                <ColumnDefinition Width="3*" />
                <!-- PANNEAU DE DROITE : RÉGLAGES AVANCÉS -->
            </Grid.ColumnDefinitions>

            <!-- BOUTON DE CALCUL DE LA PLANIFICATION -->
            <Button Content="Calculate"
                Width="100"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,300,50,0"
                Grid.ZIndex="10"
                Click="OnCalculateClicked" />

            <!-- PANNEAU DE GAUCHE : SAISIE DES TEMPS ET FILTRES -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,5,10,10">

                <!-- SAISIE DE L'HEURE DE DÉBUT ET DE FIN -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Start Time:" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <TextBox Width="30" Text="{Binding StartHour}" />
                    <TextBlock Text=" h" Margin="3,0" VerticalAlignment="Center" />
                    <TextBox Width="30" Text="{Binding StartMinute}" Margin="5,0" />
                    <TextBlock Text=" min" Margin="3,0,10,0" VerticalAlignment="Center" />

                    <TextBlock Text="End Time:" FontSize="16" VerticalAlignment="Center" Margin="10,0,5,0" />
                    <TextBox Width="30" Text="{Binding EndHour}" />
                    <TextBlock Text=" h" Margin="3,0" VerticalAlignment="Center" />
                    <TextBox Width="30" Text="{Binding EndMinute}" Margin="5,0" />
                    <TextBlock Text=" min" Margin="3,0" VerticalAlignment="Center" />
                </StackPanel>

                <!-- TABLEAU DE SAISIE DES PARAMÈTRES FILTRES -->
                <Grid Height="230" Margin="0,10,0,10">
                    <!-- DÉFINITION DES COLONNES POUR CHAQUE CHAMP -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <!-- CASE À COCHER -->
                        <ColumnDefinition Width="40" />
                        <!-- NOM DU FILTRE -->
                        <ColumnDefinition Width="60" />
                        <!-- TEMPS DE POSE -->
                        <ColumnDefinition Width="30" />
                        <!-- ESPACE -->
                        <ColumnDefinition Width="30" />
                        <!-- HEURES ACQUISES -->
                        <ColumnDefinition Width="25" />
                        <!-- TEXTE "h" -->
                        <ColumnDefinition Width="30" />
                        <!-- MINUTES ACQUISES -->
                        <ColumnDefinition Width="25" />
                        <!-- TEXTE "m" -->
                        <ColumnDefinition Width="70" />
                        <!-- POURCENTAGE À ACQUÉRIR -->
                        <ColumnDefinition Width="30" />
                        <!-- CHAMP % -->
                        <ColumnDefinition Width="25" />
                        <!-- UNITÉ % -->
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- UNE LIGNE PAR FILTRE (L, R, G, B, SII, HA, OIII) -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <!-- ENTÊTE -->
                        <RowDefinition Height="30" />
                        <!-- L -->
                        <RowDefinition Height="30" />
                        <!-- R -->
                        <RowDefinition Height="30" />
                        <!-- G -->
                        <RowDefinition Height="30" />
                        <!-- B -->
                        <RowDefinition Height="30" />
                        <!-- SII -->
                        <RowDefinition Height="30" />
                        <!-- Ha -->
                        <RowDefinition Height="30" />
                        <!-- OIII -->
                    </Grid.RowDefinitions>


                    <!-- EN-TÊTES DU TABLEAU DE SAISIE DES FILTRES -->
                    <TextBlock Grid.Column="1" Grid.Row="0" Text="Filter" FontWeight="Bold" />
                    <TextBlock Grid.Column="2" Grid.Row="0" Text="Exp (s)" FontWeight="Bold" TextAlignment="Center" />
                    <TextBlock Grid.Column="4" Grid.Row="0" Text="Already acquired" HorizontalAlignment="Left" FontWeight="Bold" Width="100" Grid.ColumnSpan="5"/>
                    <TextBlock Grid.Column="9" Grid.Row="0" Text="Final Objective" FontWeight="Bold" HorizontalAlignment="Left" Width="97" Grid.ColumnSpan="5" Margin="-20,0,0,0"/>

                    <!-- UNE LIGNE PAR FILTRE ACTIF AVEC TOUS LES CHAMPS ASSOCIÉS -->

                    <!-- LUMINANCE (L) -->
                    <CheckBox Grid.Column="0" Grid.Row="1" IsChecked="{Binding IncludeL}" />
                    <TextBlock Grid.Column="1" Grid.Row="1" Text="L" IsEnabled="{Binding IncludeL}" />
                    <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding ExposureTimeL}" IsEnabled="{Binding IncludeL}" />
                    <TextBox Grid.Column="4" Grid.Row="1" Text="{Binding HoursDoneL}" IsEnabled="{Binding IncludeL}" />
                    <TextBlock Grid.Column="5" Grid.Row="1" Text=" h" IsEnabled="{Binding IncludeL}" />
                    <TextBox Grid.Column="6" Grid.Row="1" Text="{Binding MinutesDoneL}" IsEnabled="{Binding IncludeL}" />
                    <TextBlock Grid.Column="7" Grid.Row="1" Text=" m" IsEnabled="{Binding IncludeL}" />
                    <TextBox Grid.Column="9" Grid.Row="1" Text="{Binding PercentL}" IsEnabled="{Binding IncludeL}" />
                    <TextBlock Grid.Column="10" Grid.Row="1" Text="%" IsEnabled="{Binding IncludeL}" />

                    <!-- ROUGE (R) -->
                    <CheckBox Grid.Column="0" Grid.Row="2" IsChecked="{Binding IncludeR}" />
                    <TextBlock Grid.Column="1" Grid.Row="2" Text="R" IsEnabled="{Binding IncludeR}" />
                    <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding ExposureTimeR}" IsEnabled="{Binding IncludeR}" />
                    <TextBox Grid.Column="4" Grid.Row="2" Text="{Binding HoursDoneR}" IsEnabled="{Binding IncludeR}" />
                    <TextBlock Grid.Column="5" Grid.Row="2" Text=" h" IsEnabled="{Binding IncludeR}" />
                    <TextBox Grid.Column="6" Grid.Row="2" Text="{Binding MinutesDoneR}" IsEnabled="{Binding IncludeR}" />
                    <TextBlock Grid.Column="7" Grid.Row="2" Text=" m" IsEnabled="{Binding IncludeR}" />
                    <TextBox Grid.Column="9" Grid.Row="2" Text="{Binding PercentR}" IsEnabled="{Binding IncludeR}" />
                    <TextBlock Grid.Column="10" Grid.Row="2" Text="%" IsEnabled="{Binding IncludeR}" />

                    <!-- VERT (G) -->
                    <CheckBox Grid.Column="0" Grid.Row="3" IsChecked="{Binding IncludeG}" />
                    <TextBlock Grid.Column="1" Grid.Row="3" Text="G" IsEnabled="{Binding IncludeG}" />
                    <TextBox Grid.Column="2" Grid.Row="3" Text="{Binding ExposureTimeG}" IsEnabled="{Binding IncludeG}" />
                    <TextBox Grid.Column="4" Grid.Row="3" Text="{Binding HoursDoneG}" IsEnabled="{Binding IncludeG}" />
                    <TextBlock Grid.Column="5" Grid.Row="3" Text=" h" IsEnabled="{Binding IncludeG}" />
                    <TextBox Grid.Column="6" Grid.Row="3" Text="{Binding MinutesDoneG}" IsEnabled="{Binding IncludeG}" />
                    <TextBlock Grid.Column="7" Grid.Row="3" Text=" m" IsEnabled="{Binding IncludeG}" />
                    <TextBox Grid.Column="9" Grid.Row="3" Text="{Binding PercentG}" IsEnabled="{Binding IncludeG}" />
                    <TextBlock Grid.Column="10" Grid.Row="3" Text="%" IsEnabled="{Binding IncludeG}" />

                    <!-- BLEU (B) -->
                    <CheckBox Grid.Column="0" Grid.Row="4" IsChecked="{Binding IncludeB}" />
                    <TextBlock Grid.Column="1" Grid.Row="4" Text="B" IsEnabled="{Binding IncludeB}" />
                    <TextBox Grid.Column="2" Grid.Row="4" Text="{Binding ExposureTimeB}" IsEnabled="{Binding IncludeB}" />
                    <TextBox Grid.Column="4" Grid.Row="4" Text="{Binding HoursDoneB}" IsEnabled="{Binding IncludeB}" />
                    <TextBlock Grid.Column="5" Grid.Row="4" Text=" h" IsEnabled="{Binding IncludeB}" />
                    <TextBox Grid.Column="6" Grid.Row="4" Text="{Binding MinutesDoneB}" IsEnabled="{Binding IncludeB}" />
                    <TextBlock Grid.Column="7" Grid.Row="4" Text=" m" IsEnabled="{Binding IncludeB}" />
                    <TextBox Grid.Column="9" Grid.Row="4" Text="{Binding PercentB}" IsEnabled="{Binding IncludeB}" />
                    <TextBlock Grid.Column="10" Grid.Row="4" Text="%" IsEnabled="{Binding IncludeB}" />

                    <!-- SULFURE (SII) -->
                    <CheckBox Grid.Column="0" Grid.Row="5" IsChecked="{Binding IncludeS}" />
                    <TextBlock Grid.Column="1" Grid.Row="5" Text="SII" IsEnabled="{Binding IncludeS}" />
                    <TextBox Grid.Column="2" Grid.Row="5" Text="{Binding ExposureTimeS}" IsEnabled="{Binding IncludeS}" />
                    <TextBox Grid.Column="4" Grid.Row="5" Text="{Binding HoursDoneS}" IsEnabled="{Binding IncludeS}" />
                    <TextBlock Grid.Column="5" Grid.Row="5" Text=" h" IsEnabled="{Binding IncludeS}" />
                    <TextBox Grid.Column="6" Grid.Row="5" Text="{Binding MinutesDoneS}" IsEnabled="{Binding IncludeS}" />
                    <TextBlock Grid.Column="7" Grid.Row="5" Text=" m" IsEnabled="{Binding IncludeS}" />
                    <TextBox Grid.Column="9" Grid.Row="5" Text="{Binding PercentS}" IsEnabled="{Binding IncludeS}" />
                    <TextBlock Grid.Column="10" Grid.Row="5" Text="%" IsEnabled="{Binding IncludeS}" />

                    <!-- HYDROGÈNE ALPHA (HA) -->
                    <CheckBox Grid.Column="0" Grid.Row="6" IsChecked="{Binding IncludeHa}" />
                    <TextBlock Grid.Column="1" Grid.Row="6" Text="Hα" IsEnabled="{Binding IncludeHa}" />
                    <TextBox Grid.Column="2" Grid.Row="6" Text="{Binding ExposureTimeHa}" IsEnabled="{Binding IncludeHa}" />
                    <TextBox Grid.Column="4" Grid.Row="6" Text="{Binding HoursDoneHa}" IsEnabled="{Binding IncludeHa}" />
                    <TextBlock Grid.Column="5" Grid.Row="6" Text=" h" IsEnabled="{Binding IncludeHa}" />
                    <TextBox Grid.Column="6" Grid.Row="6" Text="{Binding MinutesDoneHa}" IsEnabled="{Binding IncludeHa}" />
                    <TextBlock Grid.Column="7" Grid.Row="6" Text=" m" IsEnabled="{Binding IncludeHa}" />
                    <TextBox Grid.Column="9" Grid.Row="6" Text="{Binding PercentHa}" IsEnabled="{Binding IncludeHa}" />
                    <TextBlock Grid.Column="10" Grid.Row="6" Text="%" IsEnabled="{Binding IncludeHa}" />

                    <!-- OXYGÈNE III (OIII) -->
                    <CheckBox Grid.Column="0" Grid.Row="7" IsChecked="{Binding IncludeO}" />
                    <TextBlock Grid.Column="1" Grid.Row="7" Text="OIII" IsEnabled="{Binding IncludeO}" />
                    <TextBox Grid.Column="2" Grid.Row="7" Text="{Binding ExposureTimeO}" IsEnabled="{Binding IncludeO}" />
                    <TextBox Grid.Column="4" Grid.Row="7" Text="{Binding HoursDoneO}" IsEnabled="{Binding IncludeO}" />
                    <TextBlock Grid.Column="5" Grid.Row="7" Text=" h" IsEnabled="{Binding IncludeO}" />
                    <TextBox Grid.Column="6" Grid.Row="7" Text="{Binding MinutesDoneO}" IsEnabled="{Binding IncludeO}" />
                    <TextBlock Grid.Column="7" Grid.Row="7" Text=" m" IsEnabled="{Binding IncludeO}" />
                    <TextBox Grid.Column="9" Grid.Row="7" Text="{Binding PercentO}" IsEnabled="{Binding IncludeO}" />
                    <TextBlock Grid.Column="10" Grid.Row="7" Text="%" IsEnabled="{Binding IncludeO}" />



                    <!-- AFFICHAGE DE LA ROUE DES FILTRES -->

                    <!-- TEXTBLOCK INVISIBLE POUR RÉCUPÉRER LA COULEUR ACTUELLE DU THÈME DE NINA -->
                    <TextBlock x:Name="ReferenceTextBlock" Text="Sample" Visibility="Collapsed"/>

                    <!-- ZONE D'AFFICHAGE DE LA ROUE DE FILTRES DANS UNE VUE ADAPTATIVE -->
                    <Viewbox Stretch="Uniform" Width="300" Height="300" Grid.Column="12" Margin="0,10,-200,20" Grid.RowSpan="8">
                        <Canvas x:Name="FilterWheelCanvas" Width="400" Height="400">

                            <!-- TRANSLATION POUR REPOSITIONNER LA ROUE AU CENTRE -->
                            <Canvas.RenderTransform>
                                <TranslateTransform X="-80" Y="-40"/>
                            </Canvas.RenderTransform>

                            <!-- CENTRE DE LA ROUE -->
                            <Ellipse Canvas.Left="198.5" Canvas.Top="187.5" Width="8.34" Height="8.34" Fill="{DynamicResource FilterWheelStrokeBrush}"/>

                            <!-- CERCLE PRINCIPAL DE LA ROUE -->
                            <Ellipse Canvas.Left="124.21" Canvas.Top="114.89" Width="151.58" Height="151.58" 
                 Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1" Fill="Transparent"/>

                            <!-- CERCLES DES FILTRES (COULEUR ET ACTIVATION DYNAMIQUES) -->

                            <!-- L - BLANC -->
                            <Ellipse Canvas.Left="181.87" Canvas.Top="119.95" Width="36.26" Height="36.26" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <MultiBinding Converter="{StaticResource FilterActiveToColorConverter}">
                                        <Binding Path="IncludeL"/>
                                        <Binding Path="FilterSegments[0].Color"/>
                                    </MultiBinding>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- R - ROUGE -->
                            <Ellipse Canvas.Left="222.12" Canvas.Top="140.84" Width="36.26" Height="36.26" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <MultiBinding Converter="{StaticResource FilterActiveToColorConverter}">
                                        <Binding Path="IncludeR"/>
                                        <Binding Path="FilterSegments[1].Color"/>
                                    </MultiBinding>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- G - VERT -->
                            <Ellipse Canvas.Left="232.62" Canvas.Top="184.55" Width="36.26" Height="36.26" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <MultiBinding Converter="{StaticResource FilterActiveToColorConverter}">
                                        <Binding Path="IncludeG"/>
                                        <Binding Path="FilterSegments[2].Color"/>
                                    </MultiBinding>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- B - BLEU -->
                            <Ellipse Canvas.Left="204.12" Canvas.Top="219.98" Width="36.26" Height="36.26" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <MultiBinding Converter="{StaticResource FilterActiveToColorConverter}">
                                        <Binding Path="IncludeB"/>
                                        <Binding Path="FilterSegments[3].Color"/>
                                    </MultiBinding>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- S - JAUNE -->
                            <Ellipse Canvas.Left="159.62" Canvas.Top="219.98" Width="36.26" Height="36.26" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <MultiBinding Converter="{StaticResource FilterActiveToColorConverter}">
                                        <Binding Path="IncludeS"/>
                                        <Binding Path="FilterSegments[4].Color"/>
                                    </MultiBinding>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- HA - MAGENTA -->
                            <Ellipse Canvas.Left="131.12" Canvas.Top="184.55" Width="36.26" Height="36.26" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <MultiBinding Converter="{StaticResource FilterActiveToColorConverter}">
                                        <Binding Path="IncludeHa"/>
                                        <Binding Path="FilterSegments[5].Color"/>
                                    </MultiBinding>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- OIII - CYAN -->
                            <Ellipse Canvas.Left="141.62" Canvas.Top="140.84" Width="36.26" Height="36.26" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <MultiBinding Converter="{StaticResource FilterActiveToColorConverter}">
                                        <Binding Path="IncludeO"/>
                                        <Binding Path="FilterSegments[6].Color"/>
                                    </MultiBinding>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- PETITS CERCLES INTÉRIEURS (DÉCORATIFS) -->
                            <Ellipse Canvas.Left="196.59" Canvas.Top="205.10" Width="13.66" Height="13.66" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1"/>
                            <Ellipse Canvas.Left="181.43" Canvas.Top="197.23" Width="13.66" Height="13.66" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1"/>
                            <Ellipse Canvas.Left="211.75" Canvas.Top="197.23" Width="13.66" Height="13.66" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1"/>
                            <Ellipse Canvas.Left="188.21" Canvas.Top="167.42" Width="13.66" Height="13.66" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1"/>
                            <Ellipse Canvas.Left="204.97" Canvas.Top="167.42" Width="13.66" Height="13.66" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1"/>
                            <Ellipse Canvas.Left="177.47" Canvas.Top="180.77" Width="13.66" Height="13.66" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1"/>
                            <Ellipse Canvas.Left="215.71" Canvas.Top="180.77" Width="13.66" Height="13.66" Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1"/>

                            <!-- CONTOUR DU BOÎTIER DE LA ROUE -->
                            <Path Stroke="{DynamicResource FilterWheelStrokeBrush}" StrokeThickness="1" Fill="Transparent" 
              Data="M249.26,248.41 L249.26,282.12 A3,3 0 0 1 246.26,285.12 L153.74,285.12 A3,3 0 0 1 150.74,282.12 L150.74,248.38"/>
                        </Canvas>
                    </Viewbox>


                </Grid>




                <!-- RÉPARTITION VISUELLE DES FILTRES (BARRE COLORÉE HORIZONTALE) -->
                <TextBlock Text="Visual Filter Distribution:" Margin="0,30,0,5" FontWeight="Bold" />

                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="0" Margin="0,0,0,20">
                    <ItemsControl ItemsSource="{Binding FilterSegments}" Height="10">
                        <!-- PANEL HORIZONTAL POUR AFFICHER CHAQUE SEGMENT DE COULEUR -->
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Height="20"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!-- MODÈLE DE DONNÉE : CHAQUE SEGMENT A SA COULEUR ET SA LARGEUR PROPORTIONNELLE -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Color}">
                                    <Border.Width>
                                        <MultiBinding Converter="{StaticResource ProportionalWidthConverter}">
                                            <Binding Path="Proportion"/>
                                            <Binding RelativeSource="{RelativeSource AncestorType=ItemsControl}" Path="ActualWidth"/>
                                        </MultiBinding>
                                    </Border.Width>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>


                <!-- RÉSULTATS -->
                <TextBlock Text="Results:" FontWeight="Bold" Margin="0,10,0,5" FontSize="16" />
                <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="0,0,0,10">
                    <StackPanel>

                        <!-- TABLEAU DES FRAMES ET DU TEMPS PAR FILTRE -->
                        <Grid>
                            <!-- DÉFINITION DES LIGNES -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- EN-TÊTES -->
                                <RowDefinition Height="Auto"/>
                                <!-- NOMBRE DE FRAMES -->
                                <RowDefinition Height="Auto"/>
                                <!-- TEMPS EN MINUTES -->
                            </Grid.RowDefinitions>

                            <!-- DÉFINITION DES COLONNES : FILTRE + L R G B SII Ha OIII -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <!-- NOM DE LIGNE -->
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <!-- LIGNE 1 : EN-TÊTE DES FILTRES -->
                            <TextBlock Text="FILTER" Grid.Row="0" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" />
                            <TextBlock Text="L" Grid.Row="0" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" />
                            <TextBlock Text="R" Grid.Row="0" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" />
                            <TextBlock Text="G" Grid.Row="0" Grid.Column="3" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" />
                            <TextBlock Text="B" Grid.Row="0" Grid.Column="4" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" />
                            <TextBlock Text="SII" Grid.Row="0" Grid.Column="5" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" />
                            <TextBlock Text="Ha" Grid.Row="0" Grid.Column="6" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" />
                            <TextBlock Text="OIII" Grid.Row="0" Grid.Column="7" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" />

                            <!-- LIGNE 2 : NOMBRE DE FRAMES -->
                            <TextBlock Text="# Frames" Grid.Row="1" Grid.Column="0" FontStyle="Italic" HorizontalAlignment="Center" FontSize="14" />
                            <TextBlock Text="{Binding ResultL}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding ResultR}" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding ResultG}" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding ResultB}" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding ResultS}" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding ResultHa}" Grid.Row="1" Grid.Column="6" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding ResultO}" Grid.Row="1" Grid.Column="7" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14"/>

                            <!-- LIGNE 3 : TEMPS EN MINUTES -->
                            <TextBlock Text="Time (min)" Grid.Row="2" Grid.Column="0" FontStyle="Italic" HorizontalAlignment="Center" FontSize="11" />
                            <TextBlock Text="{Binding TimePerFilter[L], StringFormat=N1}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" FontSize="11"/>
                            <TextBlock Text="{Binding TimePerFilter[R], StringFormat=N1}" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" FontSize="11"/>
                            <TextBlock Text="{Binding TimePerFilter[G], StringFormat=N1}" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center" FontSize="11"/>
                            <TextBlock Text="{Binding TimePerFilter[B], StringFormat=N1}" Grid.Row="2" Grid.Column="4" HorizontalAlignment="Center" FontSize="11"/>
                            <TextBlock Text="{Binding TimePerFilter[S], StringFormat=N1}" Grid.Row="2" Grid.Column="5" HorizontalAlignment="Center" FontSize="11"/>
                            <TextBlock Text="{Binding TimePerFilter[Ha], StringFormat=N1}" Grid.Row="2" Grid.Column="6" HorizontalAlignment="Center" FontSize="11"/>
                            <TextBlock Text="{Binding TimePerFilter[O], StringFormat=N1}" Grid.Row="2" Grid.Column="7" HorizontalAlignment="Center" FontSize="11"/>
                        </Grid>

                    </StackPanel>
                </Border>




                <!-- ⚠️ PANNEAU WARNINGS -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="8" Margin="10"
        Visibility="{Binding Warnings, Converter={StaticResource ListCountToVisibilityConverter}}">
                    <StackPanel>
                        <!-- TITRE DE LA SECTION AVERTISSEMENTS -->
                        <TextBlock Text="⚠️ Warnings" FontWeight="Bold" Foreground="Orange" Margin="0,0,0,5"/>

                        <!-- LISTE DES AVERTISSEMENTS AVEC COULEUR SELON GRAVITÉ -->
                        <ItemsControl ItemsSource="{Binding Warnings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Message, FallbackValue='[Warning message missing]'}"
                               TextWrapping="Wrap"
                               Foreground="{Binding Level, Converter={StaticResource WarningLevelToBrushConverter}}"
                               Margin="0,2,0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </StackPanel>


            <!-- SÉPARATEUR ENTRE PANNEAU GAUCHE ET PANNEAU DE CONFIG -->
            <Border Grid.Column="1" Margin="0,0" Width="1" Background="LightGray" />


            <!-- 🛠️ PANNEAU DE CONFIGURATION (COLONNE DE DROITE) -->
            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="10,0,0,0">

                <!-- TITRE DU PANNEAU -->
                <TextBlock Text="Settings:" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center" />

                <!-- MARGE DE TOLÉRANCE -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <TextBlock Text="TOLERANCE :" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBox Width="40" Text="{Binding TolerancePercent}" />
                    <TextBlock Text="%" Margin="5,0,0,0" />
                </StackPanel>

                <!-- FRÉQUENCE DE L’AUTOFOCUS (EN MINUTES) -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <TextBlock Width="120" Text="AF Frequency : Every " Margin="0,0,0,0" />
                    <TextBox Width="30" Text="{Binding AutofocusFrequency}" />
                    <TextBlock Text="m" Margin="5,0,0,0" />
                </StackPanel>

                <!-- DURÉE AUTOFOCUS RGB -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <CheckBox IsChecked="{Binding EnableAutofocusRGB}" Width="65" Margin="0,0,5,0" />
                    <TextBlock Text="AF Duration L/RGB" Width="120" VerticalAlignment="Center" IsEnabled="{Binding EnableAutofocusRGB}" />
                    <TextBox Width="30" Margin="0,0,5,0" Text="{Binding AutofocusDurationRGB}" IsEnabled="{Binding EnableAutofocusRGB}" />
                    <TextBlock Text="s" Width="10" VerticalAlignment="Center" IsEnabled="{Binding EnableAutofocusRGB}" />
                </StackPanel>

                <!-- DURÉE AUTOFOCUS SHO -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <CheckBox IsChecked="{Binding EnableAutofocusSHO}" Width="65" Margin="0,0,5,0"/>
                    <TextBlock Text="AF Duration SHO" Width="120" VerticalAlignment="Center" IsEnabled="{Binding EnableAutofocusSHO}" />
                    <TextBox Width="30" Margin="0,0,5,0" Text="{Binding AutofocusDurationSHO}" IsEnabled="{Binding EnableAutofocusSHO}" />
                    <TextBlock Text="s" Width="10" VerticalAlignment="Center" IsEnabled="{Binding EnableAutofocusSHO}" />
                </StackPanel>

                <!-- DURÉE DU MERIDIAN FLIP -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <CheckBox IsChecked="{Binding EnableMeridianFlip}" Width="65" Margin="0,0,5,0"/>
                    <TextBlock Text="Meridian Flip Duration" Width="120" VerticalAlignment="Center" IsEnabled="{Binding EnableMeridianFlip}" />
                    <TextBox Width="30" Margin="0,0,5,0" Text="{Binding MeridianFlipDuration}" IsEnabled="{Binding EnableMeridianFlip}" />
                    <TextBlock Text="m" Width="10" VerticalAlignment="Center" IsEnabled="{Binding EnableMeridianFlip}" />
                </StackPanel>

                <!-- DITHERING (FRÉQUENCE ET DURÉE) -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <CheckBox IsChecked="{Binding EnableDithering}" Width="65" Margin="0,0,10,0"/>
                    <TextBlock Text="Dithering every" Margin="0,0,5,0" IsEnabled="{Binding EnableDithering}" />
                    <TextBox Width="20" Text="{Binding DitheringFrequency}" IsEnabled="{Binding EnableDithering}" />
                    <TextBlock Text="frames" Margin="5,0" IsEnabled="{Binding EnableDithering}" />
                    <TextBox Width="30" Text="{Binding DitheringDuration}" Margin="5,0,5,0" IsEnabled="{Binding EnableDithering}" />
                    <TextBlock Text="s" IsEnabled="{Binding EnableDithering}" />
                </StackPanel>

                <!-- PAUSE ENTRE CHAQUE IMAGE -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <CheckBox IsChecked="{Binding EnablePauseBetweenFrames}" Width="65" Margin="0,0,10,0"/>
                    <TextBlock Text="Pause between frames" Margin="0,0,7,0" IsEnabled="{Binding EnablePauseBetweenFrames}" />
                    <TextBox Width="30" Text="{Binding PauseBetweenFrames}" IsEnabled="{Binding EnablePauseBetweenFrames}" />
                    <TextBlock Text="s" Margin="5,0" IsEnabled="{Binding EnablePauseBetweenFrames}" />
                </StackPanel>



                <!-- 🔄 SÉLECTION ET GESTION DES PROFILS -->
                <StackPanel Orientation="Vertical" Margin="10,120,0,00">

                    <!-- SÉLECTION D’UN PROFIL DANS LA COMBOBOX -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Profile:" VerticalAlignment="Center" Width="60" Margin="0,0,10,0"/>
                        <ComboBox Width="140"
                  IsEditable="True"
                  ItemsSource="{Binding ProfileNames}"
                  Text="{Binding SelectedProfileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Margin="0,0,5,0"/>
                    </StackPanel>

                    <!-- BOUTONS POUR CHARGER, SAUVEGARDER, SUPPRIMER LE PROFIL -->
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Load" Width="80" Margin="0,0,10,0" Click="OnLoadProfileClicked"/>
                            <Button Content="Save" Width="80" Click="OnSaveProfileClicked"/>
                            <Button Content="Delete" Width="80" Margin="10,0,0,0" Click="OnDeleteProfileClicked"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- ✅ TOAST DE CONFIRMATION (MESSAGE TEMPORAIRE EN HAUT DE LA COLONNE) -->
                <Grid Margin="10,20,0,0" Width="200" Height="150">
                    <Border x:Name="ToastNotification"
            Background="#CC333333"
            CornerRadius="8"
            Padding="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Visibility="Collapsed"
            RenderTransformOrigin="0.5,0.5"
            Panel.ZIndex="1000">
                        <TextBlock x:Name="ToastText"
                   Foreground="White"
                   FontSize="14"
                   Text="Toast Message"
                   TextWrapping="Wrap"/>
                    </Border>


                    <!-- 🌌 LOGO GALAXIE (OPTIONNEL, COMMENTÉ POUR L’INSTANT) -->
                    <!--
                        <Path Data="{StaticResource PlanMyNight_GalaxySVG}"
                         Stretch="Uniform" Width="50" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left"
                         Margin="72,-152,0,0"
                         Fill="{DynamicResource FilterWheelStrokeBrush}" Opacity="0.5" RenderTransformOrigin="0.526,-3.831" />
                         -->
                    
                </Grid>

            </StackPanel>

        </Grid>

    </Grid>
</UserControl>