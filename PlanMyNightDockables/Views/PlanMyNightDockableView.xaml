<UserControl x:Class="PlanMyNight.PlanMyNightDockables.Views.PlanMyNightDockableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:PlanMyNight.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:ListCountToVisibilityConverter x:Key="ListCountToVisibilityConverter"/>
        <converters:WarningLevelToBrushConverter x:Key="WarningLevelToBrushConverter"/>
    </UserControl.Resources>


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />


        </Grid.RowDefinitions>

        <!-- Centered Title -->
        <!-- <TextBlock Grid.Row="0" Text="Plan My Night"
                   FontSize="24"
                   HorizontalAlignment="Left"
                   Margin="150,0,0,20" /> -->

        <!-- Main Content -->
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Calculate Button -->
            <Button Content="Calculate" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,300,50,0"
                    Grid.ZIndex="10"
                    Click="OnCalculateClicked" />

            <!-- Left Panel -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,5,10,10">
                <!-- Start / End Time -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Start Time:" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <TextBox Width="30" Text="{Binding StartHour}" />
                    <TextBlock Text=" h" Margin="3,0" VerticalAlignment="Center" />
                    <TextBox Width="30" Text="{Binding StartMinute}" Margin="5,0" />
                    <TextBlock Text=" min" Margin="3,0,10,0" VerticalAlignment="Center" />

                    <TextBlock Text="End Time:" FontSize="16" VerticalAlignment="Center" Margin="10,0,5,0" />
                    <TextBox Width="30" Text="{Binding EndHour}" />
                    <TextBlock Text=" h" Margin="3,0" VerticalAlignment="Center" />
                    <TextBox Width="30" Text="{Binding EndMinute}" Margin="5,0" />
                    <TextBlock Text=" min" Margin="3,0" VerticalAlignment="Center" />
                </StackPanel>

                <!-- Filters Table -->
                <Grid Height="230" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"  />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />

                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Column="1" Grid.Row="0" Text="Filter" FontWeight="Bold" />
                    <TextBlock Grid.Column="2" Grid.Row="0" Text="Exp (s)" FontWeight="Bold" TextAlignment="Center" />
                    <TextBlock Grid.Column="4" Grid.Row="0" Text="Already acquired" HorizontalAlignment="Left" FontWeight="Bold" Width="100" Grid.ColumnSpan="5"/>
                    <TextBlock Grid.Column="9" Grid.Row="0" Text="Distribution" FontWeight="Bold" HorizontalAlignment="Left" Width="70" Grid.ColumnSpan="3"/>

                    <!-- Filters -->
                    <!-- L -->
                    <CheckBox Grid.Column="0" Grid.Row="1" IsChecked="{Binding IncludeL}" />
                    <TextBlock Grid.Column="1" Grid.Row="1" Text="L" TextAlignment="Center" VerticalAlignment="Center" Height="16" IsEnabled="{Binding IncludeL}" />
                    <TextBox Grid.Column="2" Grid.Row="1" Margin="5,2,5,0" Height="26" VerticalAlignment="Top" Text="{Binding ExposureTimeL}" IsEnabled="{Binding IncludeL}"/>
                    <TextBox Grid.Column="4" Grid.Row="1" Margin="0,2,0,2" Text="{Binding HoursDoneL}" IsEnabled="{Binding IncludeL}"/>
                    <TextBlock Grid.Column="5" Grid.Row="1" Text=" h" Margin="5,0,5,0" VerticalAlignment="Center" Height="16" IsEnabled="{Binding IncludeL}"/>
                    <TextBox Grid.Column="6" Grid.Row="1" Margin="0,2,0,2" Text="{Binding MinutesDoneL}" IsEnabled="{Binding IncludeL}"/>
                    <TextBlock Grid.Column="7" Grid.Row="1" Text=" m" Margin="5,0,0,0" VerticalAlignment="Center" Height="16" IsEnabled="{Binding IncludeL}"/>
                    <TextBox Grid.Column="9" Grid.Row="1" Margin="1,2,1,2" Text="{Binding PercentL}" IsEnabled="{Binding IncludeL}"/>
                    <TextBlock Grid.Column="10" Grid.Row="1" Text="%" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="9" IsEnabled="{Binding IncludeL}"/>


                    <!-- R -->
                    <CheckBox Grid.Column="0" Grid.Row="2" IsChecked="{Binding IncludeR}" />
                    <TextBlock Grid.Column="1" Grid.Row="2" Text="R" TextAlignment="Center" VerticalAlignment="Center" Height="16" IsEnabled="{Binding IncludeR}" />
                    <TextBox Grid.Column="2" Grid.Row="2" Margin="5,2,5,2" Text="{Binding ExposureTimeR}" IsEnabled="{Binding IncludeR}" />
                    <TextBox Grid.Column="4" Grid.Row="2" Margin="0,2,0,2" Text="{Binding HoursDoneR}" IsEnabled="{Binding IncludeR}" />
                    <TextBlock Grid.Column="5" Grid.Row="2" Text=" h" Margin="5,0,5,0" VerticalAlignment="Center" Height="16" IsEnabled="{Binding IncludeR}"  />
                    <TextBox Grid.Column="6" Grid.Row="2" Margin="0,2,0,2" Text="{Binding MinutesDoneR}" IsEnabled="{Binding IncludeR}" />
                    <TextBlock Grid.Column="7" Grid.Row="2" Text=" m" Margin="5,0,0,0" VerticalAlignment="Center" Height="16"  IsEnabled="{Binding IncludeR}" />
                    <TextBox Grid.Column="9" Grid.Row="2" Margin="1,2,1,2" Text="{Binding PercentR}" IsEnabled="{Binding IncludeR}" />
                    <TextBlock Grid.Column="10" Grid.Row="2" Text="%" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="9"  IsEnabled="{Binding IncludeR}" />

                    <!-- G -->
                    <CheckBox Grid.Column="0" Grid.Row="3" IsChecked="{Binding IncludeG}" />
                    <TextBlock Grid.Column="1" Grid.Row="3" Text="G" TextAlignment="Center" VerticalAlignment="Center" Height="16" IsEnabled="{Binding IncludeG}" />
                    <TextBox Grid.Column="2" Grid.Row="3" Margin="5,2,5,2" Text="{Binding ExposureTimeG}"  IsEnabled="{Binding IncludeG}" />
                    <TextBox Grid.Column="4" Grid.Row="3" Margin="0,2,0,2" Text="{Binding HoursDoneG}" IsEnabled="{Binding IncludeG}" />
                    <TextBlock Grid.Column="5" Grid.Row="3" Text=" h" Margin="5,0,5,0" VerticalAlignment="Center" Height="16"  IsEnabled="{Binding IncludeG}" />
                    <TextBox Grid.Column="6" Grid.Row="3" Margin="0,2,0,2" Text="{Binding MinutesDoneG}" IsEnabled="{Binding IncludeG}" />
                    <TextBlock Grid.Column="7" Grid.Row="3" Text=" m" Margin="5,0,0,0" VerticalAlignment="Center" Height="16" IsEnabled="{Binding IncludeG}"  />
                    <TextBox Grid.Column="9" Grid.Row="3" Margin="1,2,1,2"  Text="{Binding PercentG}"/>
                    <TextBlock Grid.Column="10" Grid.Row="3" Text="%" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="9" IsEnabled="{Binding IncludeG}"  />

                    <!-- B -->
                    <CheckBox Grid.Column="0" Grid.Row="4" IsChecked="{Binding IncludeB}" />
                    <TextBlock Grid.Column="1" Grid.Row="4" Text="B" TextAlignment="Center" VerticalAlignment="Center" Height="16" IsEnabled="{Binding IncludeB}" />
                    <TextBox Grid.Column="2" Grid.Row="4" Margin="5,2,5,2" Text="{Binding ExposureTimeB}" IsEnabled="{Binding IncludeB}" />
                    <TextBox Grid.Column="4" Grid.Row="4" Margin="0,2,0,2" Text="{Binding HoursDoneB}" IsEnabled="{Binding IncludeB}" />
                    <TextBlock Grid.Column="5" Grid.Row="4" Text=" h" Margin="5,0,5,0" VerticalAlignment="Center" Height="16"  IsEnabled="{Binding IncludeB}" />
                    <TextBox Grid.Column="6" Grid.Row="4" Margin="0,2,0,2" Text="{Binding MinutesDoneB}" IsEnabled="{Binding IncludeB}" />
                    <TextBlock Grid.Column="7" Grid.Row="4" Text=" m" Margin="5,0,0,0" VerticalAlignment="Center" Height="16" IsEnabled="{Binding IncludeB}"  />
                    <TextBox Grid.Column="9" Grid.Row="4" Margin="1,2,1,2" Text="{Binding PercentB}" IsEnabled="{Binding IncludeB}" />
                    <TextBlock Grid.Column="10" Grid.Row="4" Text="%" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="9" IsEnabled="{Binding IncludeB}"  />

                    <!-- SII -->
                    <CheckBox Grid.Column="0" Grid.Row="5" IsChecked="{Binding IncludeS}" />
                    <TextBlock Grid.Column="1" Grid.Row="5" Text="SII" TextAlignment="Center" VerticalAlignment="Center" Height="16" IsEnabled="{Binding IncludeS}" />
                    <TextBox Grid.Column="2" Grid.Row="5" Margin="5,2,5,2" Text="{Binding ExposureTimeS}" IsEnabled="{Binding IncludeS}"/>
                    <TextBox Grid.Column="4" Grid.Row="5" Margin="0,2,0,2" Text="{Binding HoursDoneS}" IsEnabled="{Binding IncludeS}"/>
                    <TextBlock Grid.Column="5" Grid.Row="5" Text=" h" Margin="5,0,5,0" VerticalAlignment="Center" Height="16"  IsEnabled="{Binding IncludeS}"/>
                    <TextBox Grid.Column="6" Grid.Row="5" Margin="0,2,0,2" Text="{Binding MinutesDoneS}" IsEnabled="{Binding IncludeS}"/>
                    <TextBlock Grid.Column="7" Grid.Row="5" Text=" m" Margin="5,0,0,0" VerticalAlignment="Center" Height="16"  IsEnabled="{Binding IncludeS}"/>
                    <TextBox Grid.Column="9" Grid.Row="5" Margin="1,2,1,2" Text="{Binding PercentS}" IsEnabled="{Binding IncludeS}"/>
                    <TextBlock Grid.Column="10" Grid.Row="5" Text="%" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="9" IsEnabled="{Binding IncludeS}" />

                    <!-- Ha -->
                    <CheckBox Grid.Column="0" Grid.Row="6" IsChecked="{Binding IncludeHa}" />
                    <TextBlock Grid.Column="1" Grid.Row="6" Text="Hα" TextAlignment="Center" VerticalAlignment="Center" Height="16"  IsEnabled="{Binding IncludeHa}" />
                    <TextBox Grid.Column="2" Grid.Row="6" Margin="5,2,5,2" Text="{Binding ExposureTimeHa}"  IsEnabled="{Binding IncludeHa}" />
                    <TextBox Grid.Column="4" Grid.Row="6" Margin="0,2,0,2" Text="{Binding HoursDoneHa}"  IsEnabled="{Binding IncludeHa}" />
                    <TextBlock Grid.Column="5" Grid.Row="6" Text=" h" Margin="5,0,5,0" VerticalAlignment="Center" Height="16"  IsEnabled="{Binding IncludeHa}" />
                    <TextBox Grid.Column="6" Grid.Row="6" Margin="0,2,0,2" Text="{Binding MinutesDoneHa}"  IsEnabled="{Binding IncludeHa}" />
                    <TextBlock Grid.Column="7" Grid.Row="6" Text=" m" Margin="5,0,0,0" VerticalAlignment="Center" Height="16"  IsEnabled="{Binding IncludeHa}"  />
                    <TextBox Grid.Column="9" Grid.Row="6" Margin="1,2,1,2" Text="{Binding PercentHa}"  IsEnabled="{Binding IncludeHa}" />
                    <TextBlock Grid.Column="10" Grid.Row="6" Text="%" HorizontalAlignment="Center" VerticalAlignment="Center" Height="16" Width="9"  IsEnabled="{Binding IncludeHa}"  />

                    <!-- OIII -->
                    <CheckBox Grid.Column="0" Grid.Row="7" IsChecked="{Binding IncludeO}" Grid.RowSpan="2" />
                    <TextBlock Grid.Column="1" Grid.Row="7" Text="OIII" TextAlignment="Center" VerticalAlignment="Top" Margin="0,7,0,0" Grid.RowSpan="2" Height="16" IsEnabled="{Binding IncludeO}" />
                    <TextBox Grid.Column="2" Grid.Row="7" Margin="5,2,5,2"  Text="{Binding ExposureTimeO}" IsEnabled="{Binding IncludeO}" />
                    <TextBox Grid.Column="4" Grid.Row="7" Margin="0,2,0,2"  Text="{Binding HoursDoneO}" IsEnabled="{Binding IncludeO}" />
                    <TextBlock Grid.Column="5" Grid.Row="7" Text=" h" Margin="5,7,5,0" VerticalAlignment="Top" Grid.RowSpan="2" Height="16"  IsEnabled="{Binding IncludeO}" />
                    <TextBox Grid.Column="6" Grid.Row="7" Margin="0,2,0,2"  Text="{Binding MinutesDoneO}" IsEnabled="{Binding IncludeO}" />
                    <TextBlock Grid.Column="7" Grid.Row="7" Text=" m" Margin="5,7,0,0" VerticalAlignment="Top" Grid.RowSpan="2" Height="16" IsEnabled="{Binding IncludeO}"  />
                    <TextBox Grid.Column="9" Grid.Row="7" Margin="1,2,1,2" Text="{Binding PercentO}" IsEnabled="{Binding IncludeO}" />
                    <TextBlock Grid.Column="10" Grid.Row="7" Text="%" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,7,0,0" Grid.RowSpan="2" Height="16" Width="9" IsEnabled="{Binding IncludeO}"  />

                  
                </Grid>
                
                
                <!-- Slider -->
                <TextBlock Text="Filter Time Distribution:" Margin="0,20,0,5" FontWeight="Bold" />
                <Grid Height="10" Margin="0,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <!-- L -->
                        <ColumnDefinition Width="1*" />
                        <!-- R -->
                        <ColumnDefinition Width="1*" />
                        <!-- G -->
                        <ColumnDefinition Width="1*" />
                        <!-- B -->
                        <ColumnDefinition Width="2*" />
                        <!-- Ha -->
                        <ColumnDefinition Width="1*" />
                        <!-- SII -->
                        <ColumnDefinition Width="1*" />
                        <!-- OIII -->

                    </Grid.ColumnDefinitions>

                    <Rectangle Grid.Column="0" Fill="LightGray" Grid.RowSpan="2" />
                    <Rectangle Fill="Red" Grid.ColumnSpan="3" Margin="202,0,67,0" Grid.RowSpan="2" />
                    <Rectangle Grid.Column="2" Fill="Green" Grid.RowSpan="2" />
                    <Rectangle Grid.Column="2" Fill="Blue" Grid.ColumnSpan="3" Margin="67,0,134,0" Grid.RowSpan="2" />
                    <Rectangle Grid.Column="4" Fill="Magenta" Grid.RowSpan="2" />
                    <Rectangle Grid.Column="4" Fill="Yellow" Grid.ColumnSpan="3" Margin="134,0,67,0" Grid.RowSpan="2" />
                    <Rectangle Grid.Column="6" Fill="Cyan" Grid.RowSpan="2" />
                </Grid>


                <!-- Results -->
                <TextBlock Text="Results:" FontWeight="Bold" Margin="0,10,0,5" />
                <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Header -->
                        <TextBlock Text="Filter" Grid.Row="0" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Center" />
                        <TextBlock Text="L" Grid.Row="0" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Center" />
                        <TextBlock Text="R" Grid.Row="0" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Center" />
                        <TextBlock Text="G" Grid.Row="0" Grid.Column="3" FontWeight="Bold" HorizontalAlignment="Center" />
                        <TextBlock Text="B" Grid.Row="0" Grid.Column="4" FontWeight="Bold" HorizontalAlignment="Center" />
                        <TextBlock Text="Ha" Grid.Row="0" Grid.Column="5" FontWeight="Bold" HorizontalAlignment="Center" />
                        <TextBlock Text="SII" Grid.Row="0" Grid.Column="6" FontWeight="Bold" HorizontalAlignment="Center" />
                        <TextBlock Text="OIII" Grid.Row="0" Grid.Column="7" FontWeight="Bold" HorizontalAlignment="Center" />

                        <!-- Values -->
                        <TextBlock Text="# Frames" Grid.Row="1" Grid.Column="0" FontStyle="Italic" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ResultL}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ResultR}" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ResultG}" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ResultB}" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ResultHa}" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ResultS}" Grid.Row="1" Grid.Column="6" HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ResultO}" Grid.Row="1" Grid.Column="7" HorizontalAlignment="Center" />
                    </Grid>
                </Border>


                             
                <!-- Loss Results Display -->
                <!-- <Grid Grid.Row="5" Height="100" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="3*"/>
                        
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="1" Grid.Row="0"  Text="Tolerance Loss" />
                    <TextBlock Grid.Column="1" Grid.Row="1"  Text="AF Loss" />
                    <TextBlock Grid.Column="1" Grid.Row="2"  Text="Flip Loss" />
                    <TextBlock Grid.Column="1" Grid.Row="3"  Text="Dither. Loss" />
                    <TextBlock Grid.Column="1" Grid.Row="4"  Text="Pauses Loss" />
                                        

                </Grid> -->

                <!-- WARNINGS Panel -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="8" Margin="10"
                Visibility="{Binding Warnings, Converter={StaticResource ListCountToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="⚠️ Warnings" FontWeight="Bold" Foreground="Orange" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding Warnings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Message, FallbackValue='[Warning message missing]'}"
                                     TextWrapping="Wrap"
                                     Foreground="{Binding Level, Converter={StaticResource WarningLevelToBrushConverter}}"
                                     Margin="0,2,0,2"/>
                                </DataTemplate>


                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>


            </StackPanel>

            <!-- Separator -->
            <Border Grid.Column="1" Margin="0,0" Width="1" Background="LightGray" />

            <!-- Settings -->
            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="10,0,0,0">
                <TextBlock Text="Settings:" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center" />

                <!-- Tolerance -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <TextBlock Text="TOLERANCE :" FontWeight="Bold"  Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBox Width="40" Text="{Binding TolerancePercent}" />
                    <TextBlock Text="%" Margin="5,0,0,0" />
                </StackPanel>

                <!--Autofocus Frequency -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10" >
                    <TextBlock Width="120" Text="AF Frequency : Every "  Margin="0,0,0,0" />
                    <TextBox Width="30" Text="{Binding AutofocusFrequency}" />
                    <TextBlock Text="m" Margin="5,0,0,0" />
                </StackPanel>


                <!-- Autofocus RGB -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10" >
                    <CheckBox IsChecked="{Binding EnableAutofocusRGB}" Width="65" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="AF Duration L/RGB" Margin="5,0" Width="120" VerticalAlignment="Center" IsEnabled="{Binding EnableAutofocusRGB}" />
                    <TextBox Width="30" VerticalAlignment="Center" Margin="0,0,5,0" Text="{Binding AutofocusDurationRGB}" IsEnabled="{Binding EnableAutofocusRGB}" />
                    <TextBlock Text="s" Width="10" VerticalAlignment="Center" IsEnabled="{Binding EnableAutofocusRGB}"  />
                </StackPanel>

                <!-- Autofocus SHO -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10" >
                    <CheckBox IsChecked="{Binding EnableAutofocusSHO}" Width="65" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Margin="5,0" Width="120" VerticalAlignment="Center" Text="AF Duration SHO"  IsEnabled="{Binding EnableAutofocusSHO}"/>
                    <TextBox Width="30" VerticalAlignment="Center" Margin="0,0,5,0" Text="{Binding AutofocusDurationSHO}"  IsEnabled="{Binding EnableAutofocusSHO}"/>
                    <TextBlock Text="s" Width="10" VerticalAlignment="Center"  IsEnabled="{Binding EnableAutofocusSHO}"/>
                </StackPanel>

                <!-- Meridian Flip Duration -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10" >
                    <CheckBox IsChecked="{Binding EnableMeridianFlip}" Width="65" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Margin="5,0" Width="120" VerticalAlignment="Center" Text="Meridian Flip Duration" IsEnabled="{Binding EnableMeridianFlip}"/>
                    <TextBox Width="30" VerticalAlignment="Center" Margin="0,0,5,0" Text="{Binding MeridianFlipDuration}" IsEnabled="{Binding EnableMeridianFlip}"/>
                    <TextBlock Text="m" Width="10" VerticalAlignment="Center" IsEnabled="{Binding EnableMeridianFlip}" />
                </StackPanel>

                <!-- Dithering Every x frames and duration -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10"  >
                    <CheckBox IsChecked="{Binding EnableDithering}" Width="65" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Dithering every" Margin="0,0,5,0" IsEnabled="{Binding EnableDithering}"/>
                    <TextBox Width="20" Text="{Binding DitheringFrequency}" IsEnabled="{Binding EnableDithering}"/>
                    <TextBlock Text="frames" Margin="5,0" IsEnabled="{Binding EnableDithering}"/>
                    <TextBox Width="30" Text="{Binding DitheringDuration}" Margin="5,0,5,0" IsEnabled="{Binding EnableDithering}"/>
                    <TextBlock Text="s"  IsEnabled="{Binding EnableDithering}"/>
                </StackPanel>

                <!-- Pause between frames -->
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10"  >
                    <CheckBox IsChecked="{Binding EnablePauseBetweenFrames}" Width="65" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Pause between frames" Margin="0,0,7,0" IsEnabled="{Binding EnablePauseBetweenFrames}"/>
                    <TextBox Width="30" Text="{Binding PauseBetweenFrames}" IsEnabled="{Binding EnablePauseBetweenFrames}"/>
                    <TextBlock Text="s" Margin="5,0"  IsEnabled="{Binding EnablePauseBetweenFrames}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>